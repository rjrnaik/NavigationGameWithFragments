<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtStats"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="180dp"
        android:gravity="center"
        android:hint="Statistics"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEndGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        android:text="All Statistics"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtStats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEndGame"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="172dp"
        android:text="END"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStats" />
</androidx.constraintlayout.widget.ConstraintLayout>